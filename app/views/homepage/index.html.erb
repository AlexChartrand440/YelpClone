<% @restaurants.each do |restaurant| %>
<div class="wrapper">
  <div class="wrapper-restaurant">
  <p class="restaurant-name">
    <strong><%= link_to restaurant.name, restaurant %></strong>
  </p>
  <p>
    <%= restaurant.description %>
  </p>
  <p>
    <% sum = 0 %>
    <% restaurant.reviews.each do |review| %>
    <% sum = review.rating + sum %>
    <% end %>
  <h6>
    Average Customer Rating:
  </h6>
    <span class="stars average">
      <% if restaurant.reviews.count==0 %>
      <%= 0 %>
      <% else %>
      <%=  (sum/restaurant.reviews.count) %>
      <% end %>
    </span>
  </p>
  <span class="update-delete"><%= link_to "Edit", edit_restaurant_path(restaurant) %></span>
  <span class="update-delete"><%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?'} %></span>
  <button id="hide">Hide Comments</button>
  <button id="show">Show Comments</button>
  </div>
  <div class="comments">
  <h5>Comments</h5>
  <% restaurant.reviews.each do |review| %>
    <%= review.comment %>
  <span class="stars"><%= review.rating %></span>
  <% end %>
  
   </div>
</div>
<% end %>


